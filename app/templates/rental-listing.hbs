{{page-title "Rentals"}}
<div class="jumbo">
  <div class="right tomster"></div>
  <h2>Welcome!</h2>
  <p>We hope you find exactly what you're looking for in a place to stay.</p>
  <LinkTo @route="about" class="button">About Us</LinkTo>
</div>

{{!-- the 'each' keyword allows us to loop through each object and apply this formatting to it. --}}
{{#each this.model as |rentalUnit|}}
  <article class="listing">

     <a
	{{action "toggleImageSize"}}
    	class="image {{if this.isWide 'wide'}}"
	role="button">
	 <img src={{rentalUnit.image}} alt="{{rentalUnit.title}}"/>
    	<small>View Larger</small>
    </a>

    <div class="details">
      <h3>{{rentalUnit.title}}</h3>
      <div class="detail owner">
        <span>Owner:</span> {{rentalUnit.owner}}
      </div>
      <div class="detail type">
        <span>Type:</span> {{rentalUnit.category}}
	<span>Type:</span> {{rental-property-type rentalUnit.category}} - {{rentalUnit.category}}
      </div>
      <div class="detail location">
        <span>Location:</span> {{rentalUnit.city}}
      </div>
      <div class="detail bedrooms">
        <span>Number of bedrooms:</span> {{rentalUnit.bedrooms}}
      </div>

    </div>

  </article>
{{/each}}

